- model_class = Pin
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @pin.name
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @pin.slug
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  =image_tag @pin.image.normal.url, class: 'thumb'
  /= @pin.image
%p
  %strong= model_class.human_attribute_name(:board_id) + ':'
  %br
  = @pin.board.title


= link_to t('.back', :default => t("helpers.links.back")), board_pins_path(@board), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_board_pin_path(@board,@pin), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), board_pin_path(@board,@pin), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

- model_class = Board
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @board.title
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @board.slug
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @board.description


= link_to t('.back', :default => t("helpers.links.back")), boards_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_board_path(@board), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), board_path(@board), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
